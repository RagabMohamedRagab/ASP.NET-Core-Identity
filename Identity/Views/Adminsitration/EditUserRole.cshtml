@model List<UserRoleVM>
@{
    ViewData["Title"] = "Add Or Remove user";
    var role = ViewBag.roleId;
}
<h1 class="mt-3">Add Or Remove Users Role </h1>
<hr />
<form method="post" asp-action="EditUserRole" asp-controller="Adminsitration" asp-route-roleid="@role">
     <div class="card">
         <div class="card-header">
             <h5>Add Or Remove User to this Role : @role </h5>
         </div>
         <div class="card-body">
            @if (Model.Any())
            {
                for(int i = 0; i < Model.Count; i++)
                {   
                       <input asp-for="@Model[i].UserId" hidden/>
                       <input asp-for="@Model[i].UserName" hidden/>
                       <input asp-for="@Model[i].RoleId" hidden/>
                   <div class="form-check mt-1">
                       <input asp-for="@Model[i].IsSelelected" class="form-check-input"/>
                       <label asp-for="@Model[i].IsSelelected" class="form-check-label">@Model[i].UserName</label>
                   </div>
                }
            }
        </div>
         <div class="card-footer">
             <input value="Update" type="submit" class="btn btn-primary" />
             <a  asp-action="EditRole" asp-controller="Adminsitration" asp-route-id="@role" class="btn btn-danger">Cancel</a>
         </div>
     </div>
</form>