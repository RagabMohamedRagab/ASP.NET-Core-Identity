@using Identity.DAL.ViewModel;
@model EditUserVM;
@{
    ViewData["Title"] = "Edit - User";

}
<h1 class="mt-3">Edit User </h1>
<hr />
<form class="mt-2" method="post" asp-action="EditUser" asp-controller="Adminsitration">
    <div asp-validation-summary="ModelOnly"></div>
    <div class="form-group row">
        <label asp-for="Id" class="form-label col-sm-2"></label>
        <input asp-for="Id" disabled  class="form-Control col-sm-10"/>
        <span asp-validation-for="Id"></span>
    </div>
    <div class="form-group row">
        <label asp-for="Email" class="form-label col-sm-2"></label>
        <input asp-for="Email"   class="form-Control col-sm-10"/>
       <span asp-validation-for="Email"></span>
    </div>
       <div class="form-group row">
        <label asp-for="UserName" class="form-label col-sm-2"></label>
        <input asp-for="UserName"   class="form-Control col-sm-10"/>
       <span asp-validation-for="UserName"></span>
    </div>
        <div class="form-group row">
        <label asp-for="city" class="form-label col-sm-2"></label>
        <input asp-for="city"   class="form-Control col-sm-10"/>
       <span asp-validation-for="city"></span>
    </div>
      <div class="form-group">
          <input type="submit" class="btn btn-primary"   value="Update"/>
          <a asp-action="ListUsers" asp-controller="Adminsitration" class="btn btn-danger">Cancel</a>
      </div>
</form>
<div class="mt-2 card">
    <div class="card-header">
        <h2 class="card-title">User Roles</h2>
    </div>
    <div class="card-body">
        @if (Model.Roles.Any())
        {
            @foreach (var role in Model.Roles.ToList())
           {
              <h6>@role</h6> 
           }
        }
        else
        {
            <span>None at Momment</span>
        }
    </div>
    <div class="card-footer">
        <a asp-action="ManageUserRole" asp-controller="Adminsitration" asp-route-userId="@Model.Id" class="btn btn-primary" >Manage Roles</a>
    </div>
</div>
<div class="card mt-2">
    <div class="card-header">
        <h2 class="card-title">User Claims</h2>
    </div>
    <div class="card-body">
        @if (Model.Claims.Any())
        {
            @foreach (var claim in Model.Claims.ToList())
            {
                <h6>@claim</h6>
            }
        }
        else
        {
            <span>Note at Moment</span>
        }
    </div>
    <div class="card-footer">
        <a asp-area="" asp-action="ManageUserClaims" asp-controller="Adminsitration"asp-route-userId="@Model.Id" class="btn btn-primary">Manage Claims</a>
    </div>
</div>
