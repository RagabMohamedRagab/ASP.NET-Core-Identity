@model CreateRoleVM;
@{
    ViewData["Title"] = "Create - Role";
}
<div>
    <h2 class=" mt-3" style="color:#343a40">Add Role :</h2>
</div>
<hr />
<form asp-controller="Adminsitration" asp-action="Create" asp-antiforgery="true"  method="post" >
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group text-bold">
        <input asp-for="RoleName" class="form-control" placeholder="Enter Name">
        <span asp-validation-for="RoleName" class="text-danger"></span>
    </div>
       <div class="form-group" style="margin-left: 11px">
           <input type="submit" class="btn btn-primary"  />
       </div>
</form>

@section Scripts{
<partial name="_ValidationScriptsPartial" />
}









