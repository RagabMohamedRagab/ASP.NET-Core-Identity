@model EditRoleVM;
@{
    ViewData["Title"] = "Edit Role User";
}
<h1 class="mt-3">Edit Role </h1>
<hr />
<form method="post" class="mt-2" asp-action="EditRole" asp-controller="Adminsitration">
    <div asp-validation-summary="ModelOnly"></div>
    <div class="form-group row">
        <label asp-for="@Model.Id" class="col-sm-2 form-label"></label>
        <input asp-for="@Model.Id" disabled  class="form-control col-sm-10"/>
    </div>
      <div class="form-group row">
        <label asp-for="@Model.RoleName"class="col-sm-2 form-label"></label>
        <input asp-for="@Model.RoleName"   class="form-control col-sm-10"/>
        <span asp-validation-for="RoleName"></span>
    </div>
    <div class="form-group row">
        <div class="col-sm-10">
            <input type="submit" class="btn btn-primary" value="Update"/>
            <a  asp-action="ListRoles" asp-controller="Adminsitration" class="btn btn-primary" >Cancel</a>
        </div>
    </div>
   
    <div class="card">
        <div class="card-header">
            <h3>Users in this role</h3>
        </div>
        <div class="card-body">
            @if (Model.Users.Any())
            {
                @foreach (var user in Model.Users)
               {
                    <h5 class="card-title">@user</h5>
                } 
            }else{
                    <h5 class="card-title">None at this Momment</h5>
                }
        </div>
        <div class="card-footer">
             <a class="btn btn-danger" asp-action="EditUserRole"  asp-controller="Adminsitration" asp-route-roleId="@Model.Id">Add Or Remove User</a>
        </div>
    </div>

</form>
