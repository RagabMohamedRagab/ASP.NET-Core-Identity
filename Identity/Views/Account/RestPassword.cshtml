@model RestPasswordVM;
@{
    ViewData["Title"]="Rest-Password";
}
<div>
    <h2 class="text-primary">Rest Password</h2>
    <hr />
</div>
<form method="post" asp-area="" asp-action="RestPassword" asp-controller="Account" asp-antiforgery="true">
    <div asp-validation-summary="ModelOnly" style="color:red !important"></div>
    <div class="form-group">
        <input type="hidden" asp-for="Email" />
        <input type="hidden" asp-for="Token"/>
    </div>
    <div class="form-group"> 
        <label asp-for="Password" class="form-label"></label>
        <input asp-for="Password" class="form-control" />
        <span asp-validation-for="Password" style="color:red !important"></span>
    </div>
    <div class="form-group">
        <label asp-for="ConfirmPassword" class="form-label"></label>
        <input asp-for="ConfirmPassword" class="form-control" />
        <span asp-validation-for="ConfirmPassword"style="color:red !important"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Rest" class="btn btn-primary"/>
    </div>
</form>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
} 