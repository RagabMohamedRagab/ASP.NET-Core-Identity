@model IEnumerable<StudentVM>
@{
    ViewData["Title"] = "All-Student";
}

<div class=mt-3  style="color:#343a40;display: flex;justify-content: end;">
    <a asp-controller="Student" asp-action="Create" class="btn btn-primary ml-4">Add Student</a>
</div>

<hr />
<table class="table table-striped">
  <thead>
    <tr>
        <th  scope="col">Id</th>
      <th scope="col">Name</th>
      <th scope="col">Age</th>
      <th scope="col">Gender</th>
      <th scope="col">Level</th>
      <th scope="col">Photo</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody>
      @foreach (var item in Model)
      {
      <tr>
          <td>@item.Id</td>
      <td scope="row">@item.FullName</td>
      <td>@item.Age</td>
      <td>@item.Gender</td>
      <td>@item.Level</td>
      <td><img src="~/Images/@item.ImgUrl" class="img-responsive" width="60" height="60" /></td>
      <td>
          <a asp-action="Update" asp-route-Id="@item.Id" class="btn btn-primary">Edit</a> &nbsp;&nbsp;&nbsp;
           <a asp-action="Delete" asp-route-Id="@item.Id" class="btn btn-danger">Delete</a>
      </td>
    </tr>
      }
  </tbody>
</table>