@model  GenderVM;
@{
    ViewData["Title"] = "Add - Gender";
}
<div class=" mt-3" style="color:#343a40">
    <h2>Add Gender</h2>
</div>
<hr />
<section>
    <form asp-controller="Student" asp-action="Gender" asp-antiforgery="true">
        <div asp-validation-summary="ModelOnly" style="color:red"></div>
        <div class="d-flex">
        <div class="form-group">
            <input asp-for="Name" class="form-control"placeholder="Gender"/>
            <span asp-validation-for="Name" style="color:red"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Add" class="btn btn-primary ml-4" />
        </div>
        </div>
    </form>
    <div>
    <a asp-action="Genders" asp-controller="Student" class="btn btn-danger">Back</a>
</div>
</section>
@section Scripts{
<partial name="_ValidationScriptsPartial" />
}
