@model IEnumerable<LevelVM>;
@{
    ViewData["Title"] = "List - Level";
}
<div class=mt-3  style="color:#343a40;display: flex;justify-content: end;">
    <a asp-controller="Student" asp-action="Level" class="btn btn-primary ml-4">Add Level</a>
</div>
<hr />
<section>
    <table class="table table-striped">
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Actions</th>
        </tr>
        @if (Model.Any())
        {
          @foreach (var item in Model)
         {
               <tr>
                 
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>
                        <a  asp-action="UpdateLevel" asp-route-id="@item.Id" class="btn btn-primary">Edit</a> &nbsp;&nbsp;&nbsp;  
                        <a  asp-action="DeleteLevel" asp-route-id="@item.Id" class="btn btn-danger">Delete</a> 

                    </td>
                </tr>
         }
        }
    </table>
</section>
